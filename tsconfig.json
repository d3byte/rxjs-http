{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./lib",
        "sourceMap": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "declaration": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2015",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2018", "dom"],
        "allowSyntheticDefaultImports": true,
        "strict": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"]
}